ctz       =  [011000000001.....001.....0010011]
pcnt      =  [011000000010.....001.....0010011]
sext_b    =  [011000000100.....001.....0010011]
sext_h    =  [011000000101.....001.....0010011]
slo       =  [0010000..........001.....0110011]
